{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext", // Use "ES6" if you prefer, but "ESNext" is more future-proof
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}